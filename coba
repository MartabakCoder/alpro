// kamus
#include <iostream>
using namespace std;
  int p,l,t;
  float vol;
  
//diskripsi
int main() 
{
    cout << "masukkan komponen balok .. \n";
    
    cout << "input panjangnya "; cin >>  p;
    cout << "input lebarnya "; cin >>  l;
    cout << "input tingginya "; cin >> t;
    
    // proses perhitungan
    vol = p * l * t;
    
    cout << "volume  balok dgn p = " << p << ", l = " << l << ", t = " << t << "  adalah " << vol << endl;
    }
